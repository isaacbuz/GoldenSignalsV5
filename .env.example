# GoldenSignalsAI V5 Environment Configuration Example
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# === APPLICATION SETTINGS ===
APP_NAME="GoldenSignalsAI"
VERSION="5.0.0"
ENVIRONMENT="development"
DEBUG=true
SECRET_KEY="generate-a-secure-random-key-minimum-32-chars"

# === DATABASE SETTINGS ===
DATABASE_URL="postgresql://username:password@localhost:5432/dbname"
DATABASE_HOST="localhost"
DATABASE_PORT=5432
DATABASE_NAME="goldensignalsai"
DATABASE_USER="your_db_user"
DATABASE_PASSWORD="your_secure_password"

# === REDIS SETTINGS ===
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# === API KEYS ===
# Get your own API keys from the respective providers

# Primary Data Providers
TWELVEDATA_API_KEY=""  # Get free key at https://twelvedata.com/
FINNHUB_API_KEY=""     # Get free key at https://finnhub.io/

# AI Providers
OPENAI_API_KEY=""      # Get from https://platform.openai.com/
ANTHROPIC_API_KEY=""   # Get from https://console.anthropic.com/
XAI_API_KEY=""         # Get from https://x.ai/

# Backup Data Providers
ALPHA_VANTAGE_API_KEY=""  # Get free key at https://www.alphavantage.co/
POLYGON_API_KEY=""        # Get from https://polygon.io/
FMP_API_KEY=""           # Get from https://financialmodelingprep.com/

# === SECURITY SETTINGS ===
JWT_SECRET_KEY="generate-a-secure-random-jwt-key"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS Settings
CORS_ORIGINS="http://localhost:3000,http://localhost:5173,http://localhost:8080"

# === MONITORING ===
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"
SENTRY_DSN=""  # Optional: Get from https://sentry.io/

# === WEBSOCKET SETTINGS ===
WS_HOST="localhost"
WS_PORT=8001
WS_MAX_CONNECTIONS=1000

# === AI AGENT SETTINGS ===
MAX_AGENTS=30
AGENT_TIMEOUT=30
CONSENSUS_THRESHOLD=0.6
SIGNAL_GENERATION_INTERVAL=30

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# === FEATURE FLAGS ===
FEATURE_AI_SIGNALS=true
FEATURE_LIVE_DATA=true
FEATURE_BACKTESTING=true
FEATURE_PORTFOLIO_TRACKING=true
FEATURE_RISK_MANAGEMENT=true
FEATURE_SOCIAL_TRADING=false

# === PERFORMANCE SETTINGS ===
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
CONNECTION_POOL_SIZE=20
DATABASE_POOL_SIZE=10

# === DEPLOYMENT SETTINGS ===
CONTAINER_PORT=8000
HEALTH_CHECK_ENDPOINT="/health"
READINESS_CHECK_ENDPOINT="/ready"
METRICS_ENDPOINT="/metrics"

# === LANGSMITH (Optional) ===
LANGCHAIN_API_KEY=""
LANGCHAIN_TRACING_V2="false"
LANGCHAIN_PROJECT=""

# === MCP SETTINGS ===
MCP_GATEWAY_URL="http://localhost:8001"
MCP_API_KEY="generate-secure-mcp-key"
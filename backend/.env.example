# GoldenSignalsAI Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=GoldenSignalsAI
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-secret-key-here-minimum-32-characters-long-change-this
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Database
DATABASE_URL=postgresql+asyncpg://goldensignals:goldensignals_pass@localhost/goldensignals
DATABASE_POOL_SIZE=10
DATABASE_POOL_RECYCLE=300

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# API Keys (Get your own keys from providers)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
TWELVEDATA_API_KEY=
FINNHUB_API_KEY=
ALPHA_VANTAGE_API_KEY=
POLYGON_API_KEY=
FMP_API_KEY=

# CORS Settings (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# WebSocket
WS_HOST=localhost
WS_PORT=8001
WS_MAX_CONNECTIONS=1000

# AI Agent Settings
MAX_AGENTS=30
AGENT_TIMEOUT=30
CONSENSUS_THRESHOLD=0.6
SIGNAL_GENERATION_INTERVAL=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Feature Flags
FEATURE_AI_SIGNALS=true
FEATURE_LIVE_DATA=true
FEATURE_BACKTESTING=true
FEATURE_PORTFOLIO_TRACKING=true
FEATURE_RISK_MANAGEMENT=true
FEATURE_SOCIAL_TRADING=false

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
CONNECTION_POOL_SIZE=20

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Monitoring
HEALTH_CHECK_ENDPOINT=/health
READINESS_CHECK_ENDPOINT=/ready
METRICS_ENDPOINT=/metrics
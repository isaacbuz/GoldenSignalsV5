DEFAULT_MARKET_SYMBOLS=["AAPL", "GOOGL", "MSFT", "TSLA", "NVDA", "SPY", "QQQ"]

# Agent Settings
AGENT_MIN_CONFIDENCE=0.6
AGENT_CONSENSUS_THRESHOLD=0.7
AGENT_MAX_EXECUTION_TIME=30

# RAG Settings
RAG_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
RAG_VECTOR_DB_PATH=./vector_db
RAG_CONTEXT_WINDOW=5
RAG_MIN_RELEVANCE_SCORE=0.7

# MCP Settings
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=9000
MCP_RATE_LIMIT_PER_MINUTE=60

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO
LOG_FORMAT=json

# Email (Optional - for alerts)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL_FROM=alerts@goldensignalsai.com
ALERT_EMAIL_TO=

# Feature Flags
ENABLE_PAPER_TRADING=true
ENABLE_REAL_TRADING=false
ENABLE_BACKTESTING=true
ENABLE_ML_MODELS=true
ENABLE_NEWS_SENTIMENT=true
ENABLE_SOCIAL_SENTIMENT=false

# Performance
MAX_WORKERS=4
CONNECTION_POOL_SIZE=20
CACHE_SIZE_MB=512